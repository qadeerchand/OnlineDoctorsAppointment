<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/medical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:textSize="15sp"
            android:text="User Name:"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="128dp"
            />
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID:"
            android:layout_below="@+id/phone_number2"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:id="@+id/email_id"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:layout_below="@+id/email_id"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:id="@+id/pswd"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:layout_below="@+id/dob2"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:id="@+id/gendr"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birth Date:"
            android:layout_below="@+id/pswd"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:id="@+id/dob2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:layout_below="@+id/user_name"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:id="@+id/phone_number2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fil_email"
            android:textSize="15sp"
            android:text="TextView"
            android:layout_toEndOf="@+id/user_name"
            android:layout_toRightOf="@+id/user_name"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_below="@+id/filphon"
            android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fil_pswrd"
            android:textSize="15sp"
            android:text="TextView"
            android:layout_toEndOf="@+id/user_name"
            android:layout_toRightOf="@+id/user_name"
            android:layout_marginLeft="57dp"
            android:layout_marginStart="55dp"
            android:layout_below="@+id/fil_email"
            android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fil_gndr"
            android:textSize="15sp"
            android:text="TextView"
            android:layout_toEndOf="@+id/user_name"
            android:layout_toRightOf="@+id/user_name"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_below="@+id/fil_dob2"
            android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fil_dob2"
            android:textSize="15sp"
            android:text="TextView"
            android:layout_toEndOf="@+id/user_name"
            android:layout_toRightOf="@+id/user_name"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_below="@+id/fil_pswrd"
            android:layout_marginTop="10dp"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/user_name"
            android:layout_marginTop="-21dp"
            android:textSize="15sp"
            android:id="@+id/filuser"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_toEndOf="@+id/user_name" android:layout_toRightOf="@+id/user_name"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/user_name"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:id="@+id/filphon"
            android:layout_alignRight="@+id/filuser"
            android:layout_alignEnd="@+id/filuser"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnlogout"
            android:textAllCaps="false"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/fil_gndr"
            android:text="Logout"
            />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnshare"
            android:textAllCaps="false"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/fil_gndr"
            android:text="Share With"
            android:layout_alignRight="@+id/fil_gndr"
            android:layout_alignEnd="@+id/fil_gndr"/>


</RelativeLayout>

