<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">


    <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:src="@drawable/doctor"

    />

    <TextView
            android:id="@+id/splashTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DigiDoc"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="0dp"/>

    <TextView
            android:id="@+id/nextTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app is for doctors, patients and any person who is looking for Medical help maybe for self or for other.Be part of Healthcare movement in Pakistan and take Health in your hands."
            android:textSize="23sp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/splashTextView"
            android:textStyle="italic"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"/>
    <Button android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:background="#99999999"
            android:text="Start"
            android:textAllCaps="false"
            android:id="@+id/btnsplash"
            android:textSize="21sp"/>

</RelativeLayout>
