<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

   <ImageView android:layout_width="75dp"
              android:layout_height="75dp"
              android:src="@drawable/doctor"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              android:id="@+id/imageView"

   />
    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Online Doctor's


                          Booking System"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#8F111D"
            android:id="@+id/text1"
    />
    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text1"
    >

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint=" enter username or phone number"
                android:drawableLeft="@drawable/ic_action_buddy"
                android:id="@+id/edit1"
        />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textInputLayout1"
            app:passwordToggleEnabled="false"
            android:id="@+id/textInputLayout2">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_action_key"
                android:hint=" Password"
        android:id="@+id/edit2"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:id="@+id/btn1"
            android:background="@drawable/shap"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_below="@+id/textInputLayout2"
    />
    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1"
            android:text="Did you forget your Password?"
            android:textColor="#1DB7EA"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:id="@+id/view"
            android:layout_centerHorizontal="true"
    />
    <TextView
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:text="Don't have an account?"
            android:textColor="#a0909b"
            android:textStyle="bold"
            android:id="@+id/view1"
            android:layout_marginTop="2dp" android:layout_toStartOf="@+id/view3"
            android:layout_marginRight="7dp" android:layout_marginEnd="7dp" android:layout_toLeftOf="@+id/view3"/>
    <TextView
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:text="Sign up now"
            android:textColor="#1DB7EA"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAlignment="center"
            android:id="@+id/view3"
            android:layout_alignRight="@+id/view" android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
            android:layout_alignEnd="@+id/view" android:layout_marginTop="0dp"/>
   <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/view4"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/view3"
           android:text="OR"
           android:textSize="15sp"
           android:textStyle="bold"
           android:layout_marginTop="10dp"
   />
    <TextView
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:id="@+id/text3"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="40dp"
           android:layout_below="@+id/view3"
           android:textSize="12sp"
           android:textAlignment="center"
           android:textStyle="bold"
           android:textColor="#a0909a"
           android:text="Login with social accounts!"
   />
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/view3"
            android:layout_marginTop="56dp"
            android:id="@+id/imagebtn"
            android:background="@drawable/fb"
            android:layout_marginRight="65dp" android:layout_marginEnd="65dp" android:layout_alignRight="@+id/view3"
            android:layout_alignEnd="@+id/view3"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/view"
            android:layout_marginTop="78dp"
            android:id="@+id/imagebtn1"
            android:background="@drawable/gg"
            android:layout_toStartOf="@+id/imagebtn" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            android:layout_toLeftOf="@+id/imagebtn"/>
    <ImageButton
            android:layout_width="55dp"
            android:layout_height="51dp"
            android:layout_below="@+id/imagebtn1"
            android:layout_marginTop="-51dp"
            android:background="@drawable/tw"
            android:id="@+id/tw"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp" android:layout_alignLeft="@+id/view"
            android:layout_alignStart="@+id/view" android:layout_alignRight="@+id/imagebtn1"
            android:layout_marginRight="58dp" android:layout_marginEnd="58dp"
            android:layout_alignEnd="@+id/imagebtn1"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/view5"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#a0909a"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/view6"
            android:text="By creating an account you agree on the"
            />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Terms and Conditions"
              android:layout_centerHorizontal="true"
              android:textSize="15sp"
              android:textColor="#1DB7EA"
              android:id="@+id/view6"
              android:textStyle="bold"
              android:layout_marginBottom="10dp"
              android:layout_alignParentBottom="true"
    />

</RelativeLayout>
